<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nyp.fypj.irarphotodiary.activity.LoginActivity">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:id="@+id/loginLogo"
                android:src="@drawable/splash"
                android:layout_gravity="left|center_vertical"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="25dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="IRAR Photo Diary"
                    android:id="@+id/loginTitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please login."
                    android:id="@+id/loginDescription" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginTop="75dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/loginEmail"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:hint="Your email" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/loginPassword"
                    android:layout_below="@+id/loginEmail"
                    android:layout_alignLeft="@+id/loginEmail"
                    android:layout_alignStart="@+id/loginEmail"
                    android:layout_marginTop="10dp"
                    android:hint="Your password" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/loginNormal"
                    android:layout_below="@+id/loginPassword"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginRememberMe"
                    android:text="Remember Me"
                    android:layout_below="@+id/loginNormal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="I forgot my password!"
                    android:id="@+id/loginForgotPassword"
                    android:layout_toEndOf="@+id/loginRememberMe"
                    android:layout_below="@+id/loginRememberMe"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="I'm a new user"
                    android:id="@+id/loginRegister"
                    android:layout_below="@+id/loginForgotPassword"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:id="@+id/linearLayout2"
                    android:layout_below="@+id/loginRegister"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/loginGPlus"
                        android:layout_below="@+id/loginForgotPassword"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_gplus"
                        android:background="#00ffffff"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/loginFacebook"
                        android:layout_alignTop="@+id/loginGPlus"
                        android:layout_toRightOf="@+id/loginGPlus"
                        android:layout_toEndOf="@+id/loginGPlus"
                        android:background="#00ffffff"
                        android:src="@drawable/ic_facebook"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/loginTwitter"
                        android:layout_alignTop="@+id/loginFacebook"
                        android:layout_toRightOf="@+id/loginFacebook"
                        android:layout_toEndOf="@+id/loginFacebook"
                        android:src="@drawable/ic_twitter"
                        android:background="#00ffffff"
                        android:layout_weight="1" />
                </LinearLayout>

            </RelativeLayout>

        </GridLayout>
</RelativeLayout>
