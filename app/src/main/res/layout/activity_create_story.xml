<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:alpha_factor="1.9"
    app:parallax_factor="1.9">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="15dp"
        tools:context="nyp.fypj.irarphotodiary.fragment.ViewStorySingleFragment">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/createStoryImageView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_marginBottom="15dp"
            android:layout_row="0"
            android:clickable="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/sample" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:text="17"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:layout_row="1"
            android:paddingLeft="10dp"
            android:text="Tuesday"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/monthyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingLeft="10dp"
            android:text="June 2014"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:gravity="end"
            android:text="12:00"
            android:textSize="10dp" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/createStoryTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_row="3"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fletFloatingHint="Title"
            app:fletHintTextColor="@color/ICS_BLUE"
            app:fletTextColor="#ffffff" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/createStoryDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="4"
            android:background="@drawable/edittext_background"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textSize="12sp"
            app:fletFloatingHint="Description"
            app:fletHintTextColor="@color/ICS_BLUE"
            app:fletTextColor="#ffffff" />

    </GridLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>